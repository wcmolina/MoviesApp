<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/movie_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Backdrop image -->

        <ImageView
            android:id="@+id/iv_movie_backdrop"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Play Trailer button -->

        <Button
            android:id="@+id/btn_play_trailer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:text="@string/copy_play_trailer_btn"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/iv_movie_backdrop" />

        <!-- Movie overview text -->

        <TextView
            android:id="@+id/tv_movie_overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/primaryTextColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_play_trailer" />

        <!-- Runtime icon -->

        <ImageView
            android:id="@+id/iv_runtime_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_timer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_movie_overview" />

        <!-- Runtime text -->

        <TextView
            android:id="@+id/tv_runtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="119 min"
            android:textColor="@color/secondaryTextColor"
            app:layout_constraintLeft_toRightOf="@id/iv_runtime_icon"
            app:layout_constraintTop_toTopOf="@id/iv_runtime_icon" />

        <!-- Date icon -->

        <ImageView
            android:id="@+id/iv_calendar_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_calendar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_runtime_icon" />

        <!-- Date text -->

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="2019"
            android:textColor="@color/secondaryTextColor"
            app:layout_constraintLeft_toRightOf="@id/iv_calendar_icon"
            app:layout_constraintTop_toTopOf="@+id/iv_calendar_icon" />

        <!-- Start icon -->

        <ImageView
            android:id="@+id/iv_star_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_star"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_calendar_icon" />

        <!-- Average vote text -->

        <TextView
            android:id="@+id/tv_votes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="8.1/10"
            android:textColor="@color/secondaryTextColor"
            app:layout_constraintBottom_toBottomOf="@id/iv_star_icon"
            app:layout_constraintLeft_toRightOf="@id/iv_star_icon"
            app:layout_constraintTop_toTopOf="@+id/iv_star_icon" />

    </android.support.constraint.ConstraintLayout>

</ScrollView>